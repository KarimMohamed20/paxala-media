generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== AUTH ====================
model User {
  id            String    @id @default(cuid())
  username      String    @unique
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String
  image         String?
  role          Role      @default(CLIENT)
  managerId     String?
  manager       User?     @relation("UserManager", fields: [managerId], references: [id])
  managedUsers  User[]    @relation("UserManager")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts        Account[]
  sessions        Session[]
  projects        Project[]        @relation("ClientProjects")
  assignedProjects Project[]       @relation("ProjectStaff")
  bookings        Booking[]
  comments        Comment[]
  assignedTasks   Task[]           @relation("AssignedTasks")
  approvedTasks   Task[]           @relation("ApprovedTasks")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  ADMIN
  STAFF
  CLIENT
}

// ==================== TEAM ====================
model TeamMember {
  id        String   @id @default(cuid())
  name      String
  role      String
  bio       String?  @db.Text
  image     String?
  team      TeamType @default(PRODUCTION)
  order     Int      @default(0)
  skills    String[] @default([])
  social    Json?    // { instagram, linkedin, etc. }
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TeamType {
  PRODUCTION
  IT_DEV
}

// ==================== SERVICES ====================
model Service {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String    @db.Text
  icon        String?
  image       String?
  features    String[]  @default([])
  order       Int       @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  projects    Project[]
}

// ==================== PORTFOLIO/PROJECTS ====================
model Project {
  id          String        @id @default(cuid())
  title       String
  slug        String        @unique
  description String        @db.Text
  content     String?       @db.Text
  thumbnail   String?
  images      String[]      @default([])
  videoUrl    String?
  category    ProjectCategory
  tags        String[]      @default([])
  clientName  String?
  clientId    String?
  client      User?         @relation("ClientProjects", fields: [clientId], references: [id])
  serviceId   String?
  service     Service?      @relation(fields: [serviceId], references: [id])
  staff       User[]        @relation("ProjectStaff")
  status      ProjectStatus @default(IN_PROGRESS)
  featured    Boolean       @default(false)
  publishedAt DateTime?
  startDate   DateTime?
  endDate     DateTime?
  deadline    DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  files      ProjectFile[]
  comments   Comment[]
  milestones Milestone[]
}

model ProjectFile {
  id          String   @id @default(cuid())
  name        String
  url         String
  type        String   @default("link") // link, video, image, document, etc.
  size        Int?     // Optional for NAS/URL files
  description String?  @db.Text
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  taskId      String?  // Optional: attach to specific task
  task        Task?    @relation(fields: [taskId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())

  @@index([projectId])
  @@index([taskId])
}

enum ProjectCategory {
  VIDEO_PRODUCTION
  PHOTOGRAPHY
  GRAPHIC_DESIGN
  WEB_DEVELOPMENT
  APP_DEVELOPMENT
  THREE_D_MODELING
  ANIMATION
  SOCIAL_MEDIA
}

enum ProjectStatus {
  DRAFT
  IN_PROGRESS
  REVIEW
  COMPLETED
  ARCHIVED
}

// ==================== BOOKINGS ====================
model Booking {
  id          String        @id @default(cuid())
  userId      String?
  user        User?         @relation(fields: [userId], references: [id])
  name        String
  email       String
  phone       String?
  serviceType String
  packageId   String?       // Optional package selection (e.g., "package-01", "package-02", "package-03")
  date        DateTime
  timeSlot    String
  duration    Int           @default(60) // minutes
  notes       String?       @db.Text
  status      BookingStatus @default(PENDING)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

// ==================== BLOG ====================
model BlogPost {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  excerpt     String      @db.Text
  content     String      @db.Text
  coverImage  String?
  authorId    String
  category    BlogCategory
  tags        String[]    @default([])
  published   Boolean     @default(false)
  publishedAt DateTime?
  views       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

enum BlogCategory {
  NEWS
  TUTORIALS
  BEHIND_THE_SCENES
  CASE_STUDIES
  INDUSTRY_INSIGHTS
}

// ==================== COMMENTS ====================
model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== CLIENTS ====================
model ClientLogo {
  id        String   @id @default(cuid())
  name      String
  logo      String
  website   String?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

// ==================== CONTACT/INQUIRIES ====================
model ContactInquiry {
  id        String        @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String        @db.Text
  status    InquiryStatus @default(NEW)
  createdAt DateTime      @default(now())
}

enum InquiryStatus {
  NEW
  READ
  RESPONDED
  ARCHIVED
}

// ==================== SITE SETTINGS ====================
model SiteSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  type      String   @default("string") // string, json, boolean, number
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== MILESTONES & TASKS ====================
enum PaymentStatus {
  UNPAID
  PARTIAL
  PAID
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  SUBMITTED
  APPROVED
  REJECTED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model Milestone {
  id            String        @id @default(cuid())
  title         String
  description   String?       @db.Text
  order         Int           @default(0)
  price         Decimal?      @db.Decimal(10, 2)
  paymentStatus PaymentStatus @default(UNPAID)
  paymentDate   DateTime?
  paymentAmount Decimal?      @db.Decimal(10, 2)
  deadline      DateTime?
  isVisible     Boolean       @default(true)
  projectId     String
  project       Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks         Task[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([projectId])
}

model Task {
  id              String        @id @default(cuid())
  title           String
  description     String?       @db.Text
  status          TaskStatus    @default(TODO)
  priority        TaskPriority  @default(MEDIUM)
  dueDate         DateTime?
  isVisible       Boolean       @default(true)
  milestoneId     String
  milestone       Milestone     @relation(fields: [milestoneId], references: [id], onDelete: Cascade)
  assigneeId      String?
  assignee        User?         @relation("AssignedTasks", fields: [assigneeId], references: [id])
  rejectionReason String?       @db.Text
  submittedAt     DateTime?
  approvedAt      DateTime?
  approvedById    String?
  approvedBy      User?         @relation("ApprovedTasks", fields: [approvedById], references: [id])
  files           ProjectFile[] // Files attached to this task
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([milestoneId])
  @@index([assigneeId])
}
